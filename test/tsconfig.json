{
  "extends": "../tsconfig.base.json",
  "references": [
    {
      "path": "../src/tsconfig.json"
    }
  ],
  "compilerOptions": {
    "noEmit": true,
    "tsBuildInfoFile": "../dist/.test.tsbuildinfo",
    "paths": {
      "@lib/*": [
        "../src/*"
      ],
      "@lib": [
        "../src"
      ]
    }
  },
  "include": [
    "**/*.ts"
  ],
  "exclude": [
    "**/node_modules"
  ]
}